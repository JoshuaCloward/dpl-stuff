            <a id="first"href="/first"> To go to First Page</a>
            <a href="/second"> To go to Second Page</a>
        <% elsif @page_title == "First Page" %>
            <a id="home"href='/'> To go to Home Page</a>

            <a id="second"href="/second"> To go to Second Page</a>
        <% elsif @page_title == "Second Page" %>
            <a id="home" href='/'> To go to Home Page</a>
            <a id= "first" href="/first"> To go to First Page</a>
        <% end %>
      </div>


        <%= yield %>

    </div>
  </body>
